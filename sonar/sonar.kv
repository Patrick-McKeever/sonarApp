<MDDataTable>
    pos_hint: {"center_x": 0.5, "center_y": 0.5}
    size_hint: (0.5, 0.5)
        
<itemConfirm>
    on_release: root.set_icon(check)

    CheckboxLeftWidget:
        id: check
        group: "check"
        active: root.active

<itemConfirmMusic>
    on_release: root.set_icon(check)

    CheckboxLeftWidget:
        id: check
        group: "check"
        active: root.active
        on_press: app.playRingtone(root.index)

<notificationSettings>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "200 dp"
    
    MDSwitch:
        id: notificationsEnabled
        pos_hint: {'center_x': .5, 'center_y': .5 }
        active: root.enabled
        on_active: app.selectNotifType()
    
    MDBoxLayout:
        id: options
        opacity: root.enabled
        
        MDLabel:
            text: 'Select Notification Type'
            halign: 'center'
            
        ScrollView:
            MDList:
                id: notifList

Screen:
    MDToolbar:
        id: toolbar
        pos_hint: {"top": 1}
        size_hint: (1, 0.1)
        elevation: 10
        title: "Sonar"
        left_action_items: [["access-point", lambda x: x]]

    MDCard:
        orientation: "vertical"
        size_hint: (0.5, 0.875)
        pos_hint: {"center_x": 0.5, "bottom": 0.95}
        padding: "8dp"

        MDLabel:
            text: "Networks"
            halign: "center"
            font_style: "H4"
            size_hint_y: None
            height: self.texture_size[1]

        MDSeparator:
            height: "1dp"

        ScrollView:
            MDList:
                id: networksList